@model List<TASKORDER.Models.Order>
@{
    ViewData["Title"] = "Order";
}

<div class="text-center">
    <h1 class="display-4">Order</h1>
    <br />
</div>

<div class="row">
    <div class="col-12">
        <div class="card-box">
            <table class="table table-striped table-responsive" id="tbl_order">
                <thead>
                    <tr>
                        @*<th class="text-center th-number">No.</th>*@
                        <th>Order ID</th>
                        <th>Order Name</th>
                        <th>Order Date</th>
                        <th>Quantity</th>
                        <th class="text-center">Action</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var order in Model)
                    {
                        <tr>
                            @*<td></td>*@
                            <td hidden>@order.Id</td>
                            <td>@order.OrderId</td>
                            <td>@order.OrderName</td>
                            <td>@order.OrderDate.ToString("dd-MM-yyyy")</td>
                            <td>@order.Qty</td>
                            <td><a class="btn btn-primary" href="Orders/Edit/@order.Id" role="button">Edit</a>
                                <a class="btn btn-danger" href="Orders/Delete/@order.Id" role="button">Delete</a>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>




@section scripts {
    <script type="text/javascript">

     
        

    </script>

}